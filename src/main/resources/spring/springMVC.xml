	<!-- 自动扫描该包，使SpringMVC认为包下用了@controller注解的类是控制器 -->
	<!-- spring加载的是父容器 spring mvc加载的是子容器 只要把service的包放在spring加载就不会影响@Transaction --> 
	<context:component-scan base-package="com.way.action" />
